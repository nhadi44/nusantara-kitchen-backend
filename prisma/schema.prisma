generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model karyawan {
  id          String    @id @default(uuid())
  nik         String    @unique(map: "Karyawan_nik_key")
  firstName   String
  lastName    String
  phoneNumber String
  email       String    @unique(map: "Karyawan_email_key")
  address     String
  joinDate    String
  endContract String
  photo       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  auth        auth[]
}

model auth {
  id            String    @id @default(uuid())
  username      String    @unique(map: "Auth_username_key")
  password      String
  karyawanId    String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?
  rememberToken String?   @db.VarChar(255)
  karyawan      karyawan  @relation(fields: [karyawanId], references: [id], map: "Auth_karyawanId_fkey")

  @@index([karyawanId], map: "Auth_karyawanId_fkey")
}
